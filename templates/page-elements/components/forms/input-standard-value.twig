
{% if value is not defined %}
    {% set value = '' %}
{% endif %}

{% if type is not defined %}
    {% set type = 'text' %}
{% endif %}

{% if disabled is not defined %}
    {% set disabled = '' %}
{% else %}
    {% set disabled = 'disabled' %}
{% endif %}

{% if attrs is not defined %}
    {% set attrs = "" %}
{% endif %}

{% if class is not defined %}
    {% set class = "" %}
{% endif %}

<input
    autocomplete = 'off'
    value        = "{{ value }}"
    type         = "{{ type }}"
    class        = "date-picker form-control {{ disabled }} {{ class }}"
    style        = "max-width: 100px;"

    {% if min is defined %}
        min = "{{ min }}"
    {% endif %}

    {% if max is defined %}
        max = "{{ max }}"
    {% endif %}

    {% if step is defined %}
        step = "{{ step }}"
    {% endif %}

    {{ attrs }}
/>